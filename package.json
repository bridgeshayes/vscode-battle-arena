{
  "name": "vscode-battle-arena",
  "displayName": "Battle Arena (VS Code & Cursor)",
  "description": "Battle Arena - A VS Code and Cursor extension that brings epic battles to your coding environment!",
  "publisher": "bridgeshayes",
  "icon": "media/battle-arena-logo.png",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.97.0",
    "cursor": "^0.47.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "vscode-battle-arena-view",
          "name": "Battle Arena"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.x",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.48.0",
    "glob": "^7.2.0",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.4"
  }
}
